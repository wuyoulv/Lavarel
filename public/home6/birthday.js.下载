Event.observe($("month"),"change",function(){var e=$F(this),o=$F("day"),t=new Array;if(parseInt(e)>0)if(2==e){var p=$F("year");if(p%4==0&&p%100!=0||p%400==0)for(var n=1;n<=29;n++)n==o?t.push('<option value="'+n+'" selected="selected">'+n+"</option>"):t.push('<option value="'+n+'">'+n+"</option>");else{o>28&&(o=28);for(var n=1;n<=28;n++)n==o?t.push('<option value="'+n+'" selected="selected">'+n+"</option>"):t.push('<option value="'+n+'">'+n+"</option>")}}else if(4==e||6==e||9==e||11==e)for(var n=1;n<=30;n++)n==o?t.push('<option value="'+n+'" selected="selected">'+n+"</option>"):t.push('<option value="'+n+'">'+n+"</option>");else for(var n=1;n<=31;n++)n==o?t.push('<option value="'+n+'" selected="selected">'+n+"</option>"):t.push('<option value="'+n+'">'+n+"</option>");else t.push('<option value="">\u9009\u62e9\u65e5\u671f</option>');$("day").update(t.join(""))}),Event.observe($("year"),"change",function(){var e=$F(this),o=$F("month"),t=$F("day"),p=new Array,n=new Array;if(parseInt(e)>0)if(parseInt(o)>0){for(var i=1;i<=12;i++)i==o?n.push('<option value="'+i+'" selected="selected">'+i+"</option>"):n.push('<option value="'+i+'">'+i+"</option>");if(2==o)if(e%4==0&&e%100!=0||e%400==0)for(var s=1;s<=29;s++)s==t?p.push('<option value="'+s+'" selected="selected">'+s+"</option>"):p.push('<option value="'+s+'">'+s+"</option>");else{t>28&&(t=28);for(var s=1;s<=28;s++)s==t?p.push('<option value="'+s+'" selected="selected">'+s+"</option>"):p.push('<option value="'+s+'">'+s+"</option>")}else if(4==o||6==o||9==o||11==o)for(var s=1;s<=30;s++)s==t?p.push('<option value="'+s+'" selected="selected">'+s+"</option>"):p.push('<option value="'+s+'">'+s+"</option>");else for(var s=1;s<=31;s++)s==t?p.push('<option value="'+s+'" selected="selected">'+s+"</option>"):p.push('<option value="'+s+'">'+s+"</option>")}else{for(var i=1;i<=12;i++)n.push('<option value="'+i+'">'+i+"</option>");for(var s=1;s<=31;s++)p.push('<option value="'+s+'">'+s+"</option>")}else n.push('<option value="">\u9009\u62e9\u6708\u4efd</option>'),p.push('<option value="">\u9009\u62e9\u65e5\u671f</option>');$("month").update(n.join("")),$("day").update(p.join(""))});